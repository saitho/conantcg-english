{
  "name": "conantcg-website",
  "devDependencies": {
    "bun-types": "latest",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.4",
    "concurrently": "^8.0.1",
    "postcss": "^8.4.12",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.0.23"
  },
  "dependencies": {
    "@zachleat/filter-container": "^4.0.0",
    "flowbite": "^2.3.0"
  },
  "scripts": {
    "start": "concurrently bun:watch:*",
    "watch:tw": "bun build:tw --watch",
    "watch:hugo": "hugo server",
    "build": "bun build:tw && bun build:hugo",
    "build:tw": "tailwindcss -i ./themes/vnovel/assets/css/main.css -o ./themes/vnovel/assets/css/style.css",
    "build:hugo": "hugo --minify"
  }
}